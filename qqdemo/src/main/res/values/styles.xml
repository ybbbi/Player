<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowAnimationStyle">@style/myAnimationStyle</item>
        <item name="colorPrimary">@color/colorPrimary</item>

        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/btn_normal</item>


    </style>
    <style name="NoActionBar" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

    </style>
    <style name="popupwindow" parent="Base.ThemeOverlay.AppCompat.Light">

        <item name="overlapAnchor">false</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="splashTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- 隐藏状态栏 -->
        <item name="android:windowFullscreen">true</item>
        <!-- 隐藏标题栏 -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>


    </style>

    <style name="myAnimationStyle">
        <item name="android:activityOpenEnterAnimation">@anim/right_in</item>
        <item name="android:activityOpenExitAnimation">@anim/left_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/left_in</item>
        <item name="android:activityCloseExitAnimation">@anim/right_out</item>
    </style>

</resources>
